rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Applications - Admin can read/write, students can read their own
    match /applications/{applicationId} {
      allow read, write: if request.auth != null &&
        (request.auth.token.admin == true ||
         request.auth.uid == resource.data.studentId);
      allow create: if request.auth != null;
    }

    // Reviews - Anyone can read, authenticated users can write
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Institutions - Anyone can read, admin can write
    match /institutions/{institutionId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Users - Users can read/write their own data, admin can read all
    match /users/{userId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || request.auth.token.admin == true);
    }

    // Companies - Anyone can read, admin can write
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Jobs - Anyone can read, companies can write their own
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null &&
        (request.auth.token.admin == true || request.auth.uid == resource.data.companyId);
      allow create: if request.auth != null;
    }

    // Job Applications - Students can read/write their own, admin can read all
    match /jobApplications/{applicationId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.studentId || request.auth.token.admin == true);
      allow create: if request.auth != null;
    }

    // Courses - Anyone can read, institutions can write their own
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null &&
        (request.auth.token.admin == true || request.auth.uid == resource.data.institutionId);
      allow create: if request.auth != null;
    }

    // Faculties - Anyone can read, institutions can write their own
    match /faculties/{facultyId} {
      allow read: if true;
      allow write: if request.auth != null &&
        (request.auth.token.admin == true || request.auth.uid == resource.data.institutionId);
      allow create: if request.auth != null;
    }

    // Documents - Students can read/write their own documents, admin can read all
    match /documents/{documentId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.studentId || request.auth.token.admin == true);
      allow create: if request.auth != null;
    }
  }
}
